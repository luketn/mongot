{
  "uid": "mongot-local",
  "title": "MongoT — Key Metrics",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "tags": ["mongot", "prometheus"],
  "time": { "from": "now-15m", "to": "now" },
  "panels": [
    {
      "type": "stat",
      "title": "MongoT Target UP",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        { "expr": "up{job=\"mongot\"}", "refId": "A" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "timeseries",
      "title": "Scrape Duration (s)",
      "gridPos": { "x": 6, "y": 0, "w": 9, "h": 4 },
      "targets": [
        { "expr": "scrape_duration_seconds{job=\"mongot\"}", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Samples Scraped",
      "gridPos": { "x": 15, "y": 0, "w": 9, "h": 4 },
      "targets": [
        { "expr": "scrape_samples_scraped{job=\"mongot\"}", "refId": "A" }
      ]
    },

    {
      "type": "timeseries",
      "title": "Replication Lag (ms)",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
      "targets": [
        { "expr": "mongot_index_stats_indexing_replicationLagMs", "refId": "A" }
      ]
    },
    {
      "type": "stat",
      "title": "Index Status = STEADY (1 = healthy)",
      "gridPos": { "x": 12, "y": 4, "w": 6, "h": 6 },
      "targets": [
        { "expr": "max(mongot_index_stats_indexStatusCode{status=\"STEADY\"})", "refId": "A" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "timeseries",
      "title": "Index Size (bytes)",
      "gridPos": { "x": 18, "y": 4, "w": 6, "h": 6 },
      "targets": [
        { "expr": "mongot_index_stats_indexSizeBytes", "refId": "A" }
      ]
    },

    {
      "type": "timeseries",
      "title": "Indexing Inserts / sec",
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 7 },
      "targets": [
        { "expr": "sum(rate(mongot_index_stats_indexing_insert_total[5m]))", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Bytes Processed / sec",
      "gridPos": { "x": 12, "y": 10, "w": 12, "h": 7 },
      "targets": [
        { "expr": "sum(rate(mongot_index_stats_indexing_totalBytesProcessed_total[5m]))", "refId": "A" }
      ]
    },

    {
      "type": "timeseries",
      "title": "Search Avg Latency (s)",
      "gridPos": { "x": 0, "y": 17, "w": 12, "h": 7 },
      "targets": [
        {
          "expr": "rate(mongot_command_searchCommandTotalLatency_seconds_sum{timeUnit=\"seconds\"}[5m]) / clamp_min(rate(mongot_command_searchCommandTotalLatency_seconds_count{timeUnit=\"seconds\"}[5m]), 1e-9)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Search Max Latency (s)",
      "gridPos": { "x": 12, "y": 17, "w": 12, "h": 7 },
      "targets": [
        { "expr": "mongot_command_searchCommandTotalLatency_seconds_max{timeUnit=\"seconds\"}", "refId": "A" }
      ]
    },

    {
      "type": "timeseries",
      "title": "Executor Queues — Top 10",
      "gridPos": { "x": 0, "y": 24, "w": 12, "h": 7 },
      "targets": [
        {
          "expr": "topk(10, {job=\"mongot\", __name__=~\"mongot_.*_executor_queued_tasks\"})",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Active Threads — Top 10 Executors",
      "gridPos": { "x": 12, "y": 24, "w": 12, "h": 7 },
      "targets": [
        {
          "expr": "topk(10, {job=\"mongot\", __name__=~\"mongot_.*_executor_active_threads\"})",
          "refId": "A"
        }
      ]
    }
  ]
}